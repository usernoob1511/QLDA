{
  "name": "ecommerce-project",
  "version": "1.0.0",
  "description": "E-commerce system using Express.js, Sequelize, and React",
  "private": true,
  "workspaces": [
    "src/frontend",
    "src/backend"
  ],
  "scripts": {
    "build": "npm run build --workspace=src/frontend",
    "build:backend": "npm run build --workspace=src/backend",
    "start": "npm run start --workspace=src/backend",
    "dev": "concurrently \"npm run dev --workspace=src/backend\" \"npm run start --workspace=src/frontend\""
  },
  "keywords": [
    "ecommerce",
    "typescript",
    "react",
    "express",
    "sequelize"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@types/express": "^4.17.22",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.29",
    "@types/sequelize": "^4.28.20",
    "@types/supertest": "^6.0.3",
    "concurrently": "^8.0.1",
    "jest": "^29.7.0",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@azure/identity": "^4.10.0",
    "@sendgrid/mail": "^8.1.5",
    "@types/dotenv": "^6.1.1",
    "@types/sendgrid": "^2.0.31",
    "dotenv": "^16.5.0",
    "nth-check": "^2.0.1",
    "postcss": "^8.4.31",
    "react-hook-form": "^7.57.0",
    "sequelize": "^6.37.7"
  }
}
